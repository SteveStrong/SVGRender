@page "/"
@using SVGRender.Components

<PageTitle>SVG Render Demo</PageTitle>

<h1>SVG Renderer Demo</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Sample SVG File</h3>
        <p>Rendering a local SVG file from wwwroot/sample.svg:</p>        <SvgRenderer FilePath="sample.svg" 
                     ContainerStyle="border: 2px solid #ccc; padding: 20px; border-radius: 8px;" />
    </div>
    
    <div class="col-md-6">
        <h3>Usage Example</h3>
        <p>To use the SVG renderer component:</p>        <pre><code>&lt;SvgRenderer FilePath="your-file.svg" 
             ContainerStyle="your-styles" 
             CssClass="your-css-class" /&gt;</code></pre>
        
        <h4>Parameters:</h4>
        <ul>
            <li><strong>FilePath</strong>: Path to the SVG file relative to wwwroot (required)</li>
            <li><strong>ContainerStyle</strong>: CSS styles for the container div (optional)</li>
            <li><strong>CssClass</strong>: CSS class to add to the SVG element (optional)</li>
        </ul>
    </div>
</div>

